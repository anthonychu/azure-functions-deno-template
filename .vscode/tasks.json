{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "command": "host start",
      "problemMatcher": "$func-watch",
      "isBackground": true,
      "dependsOn": "build worker",
      "options": {
        "env": {
          "AzureFunctionsJobHost__customHandler__description__defaultExecutablePath": "deno",
          "AzureFunctionsJobHost__customHandler__description__defaultWorkerPath": "worker.ts",
          "AzureFunctionsJobHost__customHandler__description__arguments:0": "run",
          "AzureFunctionsJobHost__customHandler__description__arguments:1": "--inspect",
          "AzureFunctionsJobHost__customHandler__description__arguments:2": "--allow-net",
          "AzureFunctionsJobHost__customHandler__description__arguments:3": "--allow-env",
          "AzureFunctionsJobHost__customHandler__description__arguments:4": "--allow-read"
        }
      }
    },
    {
      "type": "shell",
      "label": "build worker",
      "command": "deno",
      "args": [
        "cache",
        "worker.ts"
      ],
      "dependsOn": "gen funcs"
    },
    {
      "type": "shell",
      "label": "gen funcs",
      "command": "deno",
      "args": [
        "run",
        "--allow-net",
        "--allow-read",
        "--allow-write",
        "--allow-env",
        "worker.ts"
      ],
      "options": {
        "env": {
          "DENOFUNC_GENERATE": "1"
        }
      }
    }
  ]
}