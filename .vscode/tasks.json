{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "command": "host start",
      "problemMatcher": "$func-watch",
      "isBackground": true,
      "dependsOn": "gen funcs"
    },
    {
      "type": "shell",
      "label": "gen funcs",
      "command": "deno",
      "args": [
        "run",
        "--allow-net",
        "--allow-read",
        "--allow-write",
        "--allow-env",
        "worker.ts"
      ],
      "options": {
        "env": {
          "DENOFUNC_GENERATE": "1"
        }
      }
    }
  ]
}