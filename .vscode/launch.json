{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-net",
        "--allow-read",
        "--allow-env",
        "--reload",
        "worker.ts"
      ],
      "port": 9229
    },
    {
      "name": "Attach to Deno Functions",
      "type": "node",
      "request": "attach",
      "cwd": "${workspaceFolder}",
      "port": 9229,
      "preLaunchTask": "func: host start"
    }
  ]
}